<section class="login">
  <header class="text-center mt-5">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-md-6 m-auto mt-3">
      <%= form_for :session, url: sessions_path do |f| %>
        <div class="mb-3">
          <%= f.text_field :username, class: "form-control", placeholder: "Username", required: true %>
        </div>

        <div class="mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
        </div>

        <div class="mb-3">
          <%= f.submit "Login", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
