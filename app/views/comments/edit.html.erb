<section class="edit-comment" style="margin-top: 100px;">
  <header class="text-center mt-5">
    <h1 style="text-decoration: none; color: black;">
      Edit Comment
    </h1>
  </header>

  <div class="row">
    <div class="col-sm-6 m-auto mt-3">
      <%= form_for :comment, url: link_comment_path(@link, @comment), method: :patch do |f| %>
        <%= render "shared/errors", object: @comment %>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control", rows: 10, cols:90, required: true %>
        </div>

        <div class="form-group">
          <%= f.button "Edit", class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
</section>